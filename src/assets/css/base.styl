*, *::before, *::after
  box-sizing border-box

html
  font-size 62.5%

body
  -webkit-text-size-adjust 100%!important
  font normal 400 1.6rem/normal font_family
  color color_text
  background-color color_base

a
  color color_text
  &:link,
  &:visited,
  &:hover,
  &:actuve
    color color_text

button
  cursor pointer
